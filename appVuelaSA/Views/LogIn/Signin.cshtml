@model appVuelaSA.Models.registro
@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
   }
<h2>Registro</h2>

@using (Html.BeginForm("Signin", "LogIn"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Registrar Cliente</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="nombre" class="control-label col-md-2">Nombre:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="correo" class="control-label col-md-2">Correo:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="usuario" class="control-label col-md-2">Usuario:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.usuario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.usuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="paisResidencia" class="control-label col-md-2">País de residencia:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.paisResidencia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.paisResidencia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="pasaporte" class="control-label col-md-2">Pasaporte:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.pasaporte, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.pasaporte, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="contrasenna" class="control-label col-md-2">Contraseña:</label>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.contrasenna, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.contrasenna, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrar" class="btn btn-default" />
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Regreso a Login", "Login")
</div>