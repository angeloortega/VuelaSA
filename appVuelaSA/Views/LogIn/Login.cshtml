@model appVuelaSA.Models.usuario

@{
    Layout = "~/Views/Shared/_Layout_Cliente.cshtml";
}


<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>usuario</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <label for="nombre" class="control-label col-md-2">Nombre:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="contrasenna" class="control-label col-md-2">Contraseña:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.contrasenna, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.contrasenna, "", new { @class = "text-danger" })
            </div>
        </div>
    

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Iniciar Sesión" formaction="/LogIn/btnLogin_Click" name="btnLogin" />
                <input type="submit" value="Registrarse" formaction="/LogIn/btnSignin_Click" name="btnSignin" />
            </div>
        </div>
    </div>
}