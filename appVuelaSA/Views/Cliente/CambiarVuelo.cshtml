                @Html.DropDownList("idvuelo", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idvuelo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idviaje, "idviaje", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("idviaje", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idviaje, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Escoger Asientos" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
