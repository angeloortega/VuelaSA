@model appVuelaSA.Models.reservacion

@{
    ViewBag.Title = "CambiarVuelo";
    Layout = "~/Views/Shared/_Layout_Cliente.cshtml";
}

<h2>CambiarVuelo</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>reservacion</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       

        <div class="form-group">
            @Html.LabelFor(model => model.idvuelo, "idvuelo", htmlAttributes: new { @class = "control-label col-md-2" })
