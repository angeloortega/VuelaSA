@model appVuelaSA.Models.pasajeabordar

@{
    ViewBag.Title = "RegistrarPase";
    Layout = "~/Views/Shared/_Layout_Administrador.cshtml";
}

<h2>Registrar Pase de Abordar</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="idpasajeabordar" class="control-label col-md-2">Pasaje de Abordar:</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.idpasajeabordar, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.idpasajeabordar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label for="pasaporte" class="control-label col-md-2">Pasaporte:</label>
            <div class="col-md-10">
                <input type="text" class="form-control" id="pasaporte" name="pasaporte">
            </div>
        </div>

        <div class="form-group">
            <label for="vuelo" class="control-label col-md-2">Vuelo:</label>
            <div class="col-md-10">
                <input type="text" class="form-control" id="vuelo" name="vuelo">
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}


